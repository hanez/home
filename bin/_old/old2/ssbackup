#		cval="$OPTARG"
#		;;
#  ?)
#    usage;
#		exit 2
#		;;
#  esac
#done
#printf $OPTIND

if [ "$aflag" ]
then
  printf "Option -a specified\n"
fi
if [ "$cflag" ]
then
  printf 'Option -c "%s" specified\n' "$cval"
fi
printf "Remaining arguments are: %s\n" "$*"



